<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ASTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
    </style>

    <style name="TabsDesign" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/tab_purple</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/divider_grey</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/CustomTextStyle</item>
    </style>

    <style name="CustomTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <color name="colorPrimary">#9c27b0</color>
    <color name="colorPrimaryDark">#7b1fa2</color>
    <color name="colorAccent">#e040fb</color>
</resources>
